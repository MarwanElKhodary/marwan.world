---
import Layout from "../layouts/main.astro";
import Icon from "../components/icon.astro";
---

<script src="../utils/js/drag.js"></script>

<Layout title="Marwan ElKhodary">
  <!-- <div class="relative mx-96 my-20 flex"> -->
  <div
    class="pt-20 flex flex-col xl:flex-row h-full mx-4 lg:mx-16 xl:mx-52 2xl:mx-72"
  >
    <!--Intro Blurb -->
    <div
      class="flex flex-col justify-center items-center h-1/2 xl:h-full xl:w-1/2"
    >
      <h1
        class="select-none mb-3 md:mb-8 lg:mb-10 text-center text-3xl md:text-7xl font-futuraMedium leading-tight text-rock dark:text-gasoline"
      >
        Hi! I'm Marwan.
      </h1>
      <!-- P Tags -->
      <div class="text-left mx-8">
        <p
          class="select-none font-futuraBook mb-3 md:mb-8 lg:mb-10 text-lg md:text-2xl text-rock dark:text-cream"
        >
          I'm a Full Stack Developer based in Toronto, Canada.
        </p>
        <p
          class="select-none font-futuraBook mb-3 md:mb-8 lg:mb-10 text-lg md:text-2xl text-rock dark:text-cream"
        >
          I've been building stuff on the web since 2020.
        </p>
        <p
          class="select-none font-futuraBook mb-3 md:mb-8 lg:mb-10 text-lg md:text-2xl text-rock dark:text-cream"
        >
          In 2021, I built my own computer. You can build your own too!
        </p>
      </div>
    </div>
    <!-- Computer Parts Container -->
    <div class="relative grid grid-cols-3 h-full mp:gap-1 xl:gap-8 xl:w-1/2 2xl:w-2/3 touch-none">
      <Icon 
        pLabel="motherboard-label" 
        pLabelClass="absolute text-rock dark:text-gasoline fill-current size-4/12 select-none"
        pPart="motherboard"
        pPartClass="z-40 dropzone text-rock dark:text-gasoline fill-current size-9/12"
      />
      <Icon 
        pLabel="gpu-label" 
        pLabelClass="absolute text-rock dark:text-gasoline fill-current size-3/12 mp:size-4/12 xl:size-3/12 select-none"
        pPart="gpu"
        pPartClass="z-40 hover:cursor-grab drag-drop text-rock dark:text-gasoline fill-current size-4/6"
      />
      <Icon 
        pLabel="hdd-label" 
        pLabelClass="absolute text-rock dark:text-gasoline fill-current size-3/12 select-none"
        pPart="hdd"
        pPartClass="z-40 hover:cursor-grab drag-drop text-rock dark:text-gasoline fill-current size-3/6"
      />
      <div class="col-span-3 flex items-center justify-center">
        <p class="select-none font-futuraDemi text-xs xl:text-lg text-decoration-line: underline py-5 xl:py-0 text-opacity-50 dark:text-opacity-50 text-center text-rock dark:text-gasoline">
          To start, drag the CPU onto the Motherboard
        </p>
      </div>
      <Icon 
        pLabel="case-label" 
        pLabelClass="absolute text-rock dark:text-gasoline fill-current size-5/12 mp:size-4/12 sm:size-5/12 xl:size-4/12 2xl:size-5/12 select-none"
        pPart="case"
        pPartClass="z-40 text-rock dark:text-gasoline fill-current size-4/6"
      />
      <Icon 
        pPart="monitor-off"
        pPartClass="place-self-center text-rock dark:text-gasoline fill-current size-7/12 xl:size-full"
      />
      <Icon 
        pLabel="psu-label" 
        pLabelClass="absolute text-rock dark:text-gasoline fill-current size-4/12 xl:size-3/12 select-none"
        pPart="psu"
        pPartClass="z-40 hover:cursor-grab drag-drop text-rock dark:text-gasoline fill-current size-3/6"
      />
      <Icon 
        pLabel="cpu-label" 
        pLabelClass="absolute text-rock dark:text-gasoline fill-current size-2/12 select-none"
        pPart="cpu"
        pPartClass="z-40 hover:cursor-grab drag-drop text-rock dark:text-gasoline fill-current size-1/6"
      />
      <Icon 
        pLabel="cooler-label" 
        pLabelClass="absolute text-rock dark:text-gasoline fill-current size-2/12 select-none"
        pPart="cooler"
        pPartClass="z-40 hover:cursor-grab drag-drop text-rock dark:text-gasoline fill-current size-5/12"
      />
      <Icon 
        pLabel="ram-label" 
        pLabelClass="absolute text-rock dark:text-gasoline fill-current size-2/12 select-none"
        pPart="ram"
        pPartClass="z-40 hover:cursor-grab drag-drop text-rock dark:text-gasoline fill-current size-5/12"
      />
    </div>
  </div>
</Layout>
