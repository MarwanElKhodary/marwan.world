import Layout from "../layouts/main.astro";
---

<Layout title="Page Not Found | Marwan ElKhodary">
  <div class="flex items-center justify-center h-full">
    <section class="relative w-full text-center">
        <p class="select-none font-futuraBold text-rock dark:text-gasoline text-center text-6xl md:text-8xl mb-10">
            404
        </p>
        <p class="select-none font-futuraMedium text-rock dark:text-cream text-center text-2xl md:text-4xl px-10 mb-16">
